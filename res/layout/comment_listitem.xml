<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/comment_listitem"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:paddingLeft="6dip"
              android:paddingRight="6dip"
              android:paddingTop="8dip"
              android:paddingBottom="7dip">


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dip"
            android:paddingBottom="7dip">


        <TextView
                android:id="@+id/comment_listitem_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/black"
                android:visibility="gone"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:id="@+id/comment_listitem_plant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/listitem_blue"/>
            <TextView
                    android:id="@+id/comment_listitem_username"
                    android:layout_marginLeft="6dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/listitem_blue"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/gray"
                    android:text="@string/post_detail_lable_pub"/>
            <TextView
                    android:id="@+id/comment_listitem_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/listitem_gray"/>
        </LinearLayout>

        <RelativeLayout android:id="@+id/AdLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
        </RelativeLayout>
        <com.jimidigi.smth3k.widget.LinkView
                android:id="@+id/comment_listitem_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_size_18"
                android:lineSpacingMultiplier="1.5"
                android:lineSpacingExtra="2dip"
                android:textColor="@color/listitem_black"
                android:autoLink="web|email"/>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/comment_listitem_att"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>

</LinearLayout> 
