<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_relativelayout_header"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:background="@drawable/widget_head_bg">


    <ImageView
            android:id="@+id/main_head_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/frame_logo_hotpost"/>

    <TextView
            android:id="@+id/main_head_title"
            style="@style/main_head_title"
            android:layout_toRightOf="@id/main_head_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="十大"/>

    <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_toRightOf="@id/main_head_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:visibility="gone"/>


    <EditText
            android:id="@+id/main_head_search_box"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dip"
            android:singleLine="true"
            android:hint="输入版面ID"/>
    <Button
            android:id="@+id/main_head_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2.0dip"
            android:textSize="14dip"
            android:text="进入"/>

    <ImageButton
            android:id="@+id/main_head_pub_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2.0dip"
            android:background="@drawable/frame_icon_post"
            android:visibility="gone"/>

    <ImageButton
            android:id="@+id/main_head_pub_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2.0dip"
            android:background="@drawable/frame_icon_mail"
            android:visibility="gone"/>


</RelativeLayout>
